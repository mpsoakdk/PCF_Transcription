<?xml version="1.0" encoding="utf-8"?>
<manifest>
  <control namespace="ConversationInsights" constructor="TranscriptViewer" version="1.5.0" display-name-key="Transcript Viewer" description-key="Displays live voice transcription for ongoing voice calls in Customer Service workspace" control-type="standard">
    <external-service-usage enabled="false">
    </external-service-usage>
    <!-- Bind to the conversation ID (msdyn_ocsession primary key) -->
    <property name="conversationId" display-name-key="Conversation ID" description-key="The ID of the current conversation (msdyn_ocsession)" of-type="SingleLine.Text" usage="bound" required="false" />
    <!-- Optional: Display configuration -->
    <property name="maxHeight" display-name-key="Max Height (px)" description-key="Maximum height of the transcript panel in pixels" of-type="Whole.None" usage="input" required="false" default-value="400" />
    <resources>
      <code path="index.ts" order="1" />
      <css path="css/LiveTranscriptControl.css" order="1" />
    </resources>
    <!-- Enable WebAPI for potential future transcript data retrieval -->
    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
      <uses-feature name="Utility" required="true" />
    </feature-usage>
  </control>
</manifest>